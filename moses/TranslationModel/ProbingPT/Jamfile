local current = "" ;
local includes = ;
local with-probing-pt = [ option.get "with-probing-pt" ] ;
if $(with-probing-pt) {
  fakelib ProbingPT : [ glob *.cpp ] ../..//headers : $(includes) <dependency>$(PT-LOG) : : $(includes) ;
}
else {
  fakelib ProbingPT ;
}

path-constant PT-LOG : bin/pt.log ;
update-if-changed $(PT-LOG) $(current) ;

