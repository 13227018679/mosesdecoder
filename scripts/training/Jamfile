if $(WITH-GIZA) != no || $(CLEANING) != no {
  make train-model.perl : train-model.perl.missing_bin_dir : @missing_bin_dir ;
  actions missing_bin_dir {
    sed 's#^my \$BINDIR\s*=.*#my\ \$BINDIR=\"$(WITH-GIZA)\";#' $(>) >$(<)
    chmod +x $(<)
  }

  install legacy : train-model.perl : <location>. ;
}
